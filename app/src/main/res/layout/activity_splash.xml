<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.SplashActivity">

    <LinearLayout
        android:id="@+id/appNameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/just"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/just"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/_7sdp"
            android:textSize="@dimen/_19ssp"
            android:fontFamily="sans-serif-smallcaps"
            android:includeFontPadding="false"
            android:textStyle="bold"
            tools:ignore="VisualLintBounds" />

        <TextView
            android:id="@+id/news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="@string/news"
            android:textColor="@color/white"
            android:textSize="@dimen/_30ssp"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            android:includeFontPadding="false" />

    </LinearLayout>

    <com.mecofarid.squeezeloader.SqueezeLoader
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        app:sl_squeezebarWidth="@dimen/_60sdp"
        app:sl_animationDuration="1500"
        app:sl_colorSqueezebar="@color/white"
        app:layout_constraintTop_toBottomOf="@id/appNameLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/_5sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>