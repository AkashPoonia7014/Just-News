<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.article.ArticleFragment">

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabLike"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            app:backgroundTint="@color/colorBottomNav"
            android:src="@drawable/ic_like"
            app:fabSize="normal"
            android:scaleType="center"
            app:fabCustomSize="@dimen/_36sdp"
            android:contentDescription="@string/app_name" />

        <View
            android:id="@+id/viewSubtitleIndicator"
            android:layout_width="@dimen/_8sdp"
            android:layout_height="@dimen/_8sdp"
            android:background="@drawable/background_article_middle"
            android:layout_gravity="center"
            android:layout_marginStart="-1dp"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabBookmark"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            app:backgroundTint="@color/colorBottomNav"
            android:src="@drawable/ic_bookmark_article"
            app:fabSize="normal"
            android:scaleType="center"
            app:fabCustomSize="@dimen/_36sdp"
            android:layout_marginStart="-1dp"
            android:contentDescription="@string/app_name" />

        <View

            android:layout_width="@dimen/_8sdp"
            android:layout_height="@dimen/_8sdp"
            android:background="@drawable/background_article_middle"
            android:layout_gravity="center"
            android:layout_marginStart="-1dp"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabShare"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            app:backgroundTint="@color/colorBottomNav"
            android:src="@drawable/ic_share"
            app:fabSize="normal"
            android:scaleType="center"
            app:fabCustomSize="@dimen/_36sdp"
            android:layout_marginStart="-1dp"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>